<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="290.0" prefWidth="496.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teamfour.sistutorias.presentation.LoginController">
    <children>
        <Label fx:id="lblPassword" layoutX="248.0" layoutY="133.0" prefHeight="20.0" prefWidth="86.0" text="Contraseña:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <PasswordField fx:id="txtPassword" focusTraversable="false" layoutX="331.0" layoutY="130.0" prefHeight="25.0" prefWidth="136.0">
         <font>
            <Font size="13.0" />
         </font></PasswordField>
        <Label fx:id="lblUser" layoutX="271.0" layoutY="80.0" text="Usuario:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="txtUser" layoutX="331.0" layoutY="77.0" prefHeight="25.0" prefWidth="136.0">
         <font>
            <Font size="13.0" />
         </font></TextField>
        <Button fx:id="btnSignIn" layoutX="326.0" layoutY="190.0" mnemonicParsing="false" onAction="#signUp" style="-fx-background-color: ForestGreen;" text="Iniciar Sesion" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
        <Label fx:id="txtTitulo" alignment="CENTER" contentDisplay="CENTER" layoutX="269.0" layoutY="16.0" prefHeight="17.0" prefWidth="204.0" text="BIENVENIDO">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <Button fx:id="btnExit" layoutX="351.0" layoutY="239.0" mnemonicParsing="false" onAction="#close" style="-fx-background-color: Indianred;" text="Salir" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
        <ImageView fx:id="imgLogo" fitHeight="241.0" fitWidth="214.0" layoutX="23.0" layoutY="23.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/FEIUV.png" />
         </image></ImageView>
        <Label fx:id="lblInvalidUser" layoutX="340.0" layoutY="92.0" prefHeight="17.0" prefWidth="98.0" text="Usuario no valido" textFill="RED" visible="false" />
        <Label fx:id="lblInvalidPassword" layoutX="340.0" layoutY="145.0" prefHeight="17.0" prefWidth="136.0" text="Contraseña no valida" textFill="RED" visible="false" />
    </children>
</AnchorPane>
